{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "js/**/*.js",
    "sw.js",
    "types/**/*.d.ts",
    "src/**/*.js"
  ]
}
